{
  "name": "headernode",
  "version": "0.0.1",
  "description": "A lightweight node for syncing only bitcoin block headers from a specific height",
  "main": "lib/index.js",
  "repository": "git://github.com/chainpoint/headernode.git",
  "scripts": {
    "lint": "eslint lib/*.js test/*.js",
    "test": "mocha --reporter spec test/*-test.js",
    "test:watch": "mocha --reporter spec --watch test/*-test.js",
    "test:inspect": "mocha --reporter spec --inspect-brk --watch test/*-test.js"
  },
  "lint-staged": {
    "*.{js,json,css,jsx,scss}": [
      "prettier --write",
      "git add"
    ]
