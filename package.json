{
  "name": "headernode",
  "version": "0.0.1",
  "description": "A lightweight node for syncing only bitcoin block headers from a specific height",
  "main": "lib/index.js",
  "repository": "git://github.com/chainpoint/headernode.git",
  "scripts": {
    "lint": "eslint lib/*.js test/*.js",
    "test": "mocha --reporter spec test/*-test.js",
    "test:watch": "mocha --reporter spec --watch test/*-test.js",
    "test:inspect": "mocha --reporter spec --inspect-brk --watch test/*-test.js"
  },
  "author": "bucko",
  "license": "MIT",
  "bin": {
    "headernode": "./bin/headernode"
  },
  "dependencies": {
    "bcoin": "bucko13/bcoin#expose-filter",
    "bcurl": "^0.1.6",
    "bdb": "^1.1.5",
    "bfile": "^0.2.0",
    "bmutex": "^0.1.5",
    "bsert": "^0.0.9",
    "bufio": "^1.0.5",
    "bweb": "^0.1.8"
  },
  "devDependencies": {
    "eslint": "^5.15.1",
    "eslint-config-prettier": "^4.1.0",
    "eslint-plugin-prettier": "^3.0.1",
    "husky": "^1.3.1",
    "lint-staged": ">=8",
    "mocha": "^6.0.2",
    "prettier": "^1.17.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix",
      "git add"
    ]
  }
}
